pipeline {
    agent any

    environment {
        K8S_NAMESPACE = "devops-tools"
        MANIFESTS_PATH = "."
    }

    stages {
        stage('Checkout manifests') {
            steps {
                git branch: 'main', url: 'https://github.com/mcyliowski/helm_charts.git'
            }
        }

        stage('Deploy manifests') {
            steps {
                kubeconfig(
                    caCertificate: 'LS0tLS1CRUdJTiBDRVJUSUZJQ0FURS0tLS0tCk1JSURCVENDQWUyZ0F3SUJBZ0lJRGNtMFg1aXp0QjR3RFFZSktvWklodmNOQVFFTEJRQXdGVEVUTUJFR0ExVUUK...',
                    credentialsId: 'kubeconfig',
                    serverUrl: 'https://ansible1:6443'
                ) {
                    sh """
                        echo "kubectl version:"
                        kubectl version --client

                        echo "Applying manifests..."
                        kubectl apply -f $MANIFESTS_PATH --namespace $K8S_NAMESPACE
                    """
                }
            }
        }
    }
}
