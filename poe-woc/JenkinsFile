pipeline {
    agent {
        kubernetes {
            label 'kubectl-agent'
            defaultContainer 'kubectl'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
    - name: kubectl
      image: bitnami/kubectl:latest
      command:
        - cat
      tty: true
"""
        }
    }

    stages {
        stage('Deploy') {
            steps {
                withKubeConfig(credentialsId: '7f6382e2-5f63-4dcb-a821-5c4afe2a14ec') {
                    sh 'kubectl version --client'
                    sh "kubectl apply -f . --namespace devops-tools"
                }
            }
        }
    }
}

